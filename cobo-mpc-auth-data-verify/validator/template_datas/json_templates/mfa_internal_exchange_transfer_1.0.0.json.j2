{
  "_theme": "mfa",
  "_biz_version": {{ template_version | toString }},
  "header": {
    "title": "Please confirm if this action was initiated by you",
    "title_icon": "https://d.cobo.com/public/documents/statement_mfa.png",
    "components": [
      {
        "_component_type": "avatar",
        "data": {
          "icon_url": "https://d.cobo.com/public/documents/statement_mfa.png",
          "text": {{ initiator | toString }}
        }
      }
    ]
  },
  "body": {
    "components": [
      {
        "_component_type": "text",
        "_is_in_list": true,
        "key": "Action",
        "data": {
          "value": {{ action | toString }}
        }
      },
      {
        "_component_type": "text",
        "_is_in_list": true,
        "key": "Organization",
        "data": {
          "value": {{ org_name | toString }},
          "label": {{ environment | toString }}
        }
      },
      {
        "_component_type": "date_time",
        "key": "Created Time",
        "data": {
          "value": {{ created_time | toInt }}
        }
      },
      {% if expired_time %}
      {
        "_component_type": "date_time",
        "key": "Expired Time",
        "data": {
          "value": {{ expired_time | toInt }}
        }
      },
      {% endif %}
      {
        "_component_type": "text",
        "key": "Message ID",
        "data": {
          "value": {{ statement_uuid | toString }}
        }
      },
      {
        "_component_type": "horizontal_line"
      },
      {
        "_component_type": "text_with_popup",
        "key": "From",
        "data": {
          "value": {{ (from_wallet + ' (' + from_wallet_type + ')') | toString }},
          "popup": {
            "title": "From",
            "components": [
              {
                "_component_type": "card",
                "_style": {},
                "data": {
                  "title": {{ from_wallet | toString }},
                  "description": {{ from_wallet_type | toString }},
                  "icon": "https://d.cobo.com/public/documents/ic-Exchanges-off.png"
                }
              }
            ]
          }
        }
      },
      {
        "_component_type": "text_with_popup",
        "key": "To",
        "data": {
          "value": {{ (to_wallet + ' (' + to_wallet_type + ')') | toString }},
          "popup": {
            "title": "To",
            "components": [
              {
                "_component_type": "card",
                "_style": {},
                "data": {
                  "title": {{ to_wallet | toString }},
                  "description": {{ to_wallet_type | toString }},
                  "icon": "https://d.cobo.com/public/documents/ic-Exchanges-off.png"
                }
              }
            ]
          }
        }
      },
      {
        "_component_type": "text",
        "key": "Amount",
        "data": {
          "value": {{ amount | toString }}
        }
      }
    ]
  }
}
