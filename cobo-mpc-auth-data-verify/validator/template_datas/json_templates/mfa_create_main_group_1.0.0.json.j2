{
  "_theme": "mfa",
  "_biz_version": {{ template_version | toString }},
  "header": {
    "title": "Please confirm if this action was initiated by you",
    "title_icon": "https://d.cobo.com/public/documents/statement_mfa.png",
    "components": [
      {
        "_component_type": "avatar",
        "data": {
          "icon_url": "https://d.cobo.com/public/documents/statement_mfa.png",
          "text": {{ initiator | toString }}
        }
      }
    ]
  },
  "body": {
    "components": [
      {
        "_component_type": "text",
        "_is_in_list": true,
        "key": "Action",
        "data": {
          "value": {{ action | toString }}
        }
      },
      {
        "_component_type": "text",
        "_is_in_list": true,
        "key": "Organization",
        "data": {
          "value": {{ org_name | toString }},
          "label": {{ environment | toString }}
        }
      },
      {
        "_component_type": "date_time",
        "key": "Created Time",
        "data": {
          "value": {{ created_time | toInt }}
        }
      },
      {% if expired_time %}
      {
        "_component_type": "date_time",
        "key": "Expired Time",
        "data": {
          "value": {{ expired_time | toInt }}
        }
      },
      {% endif %}
      {
        "_component_type": "text",
        "key": "Message ID",
        "data": {
          "value": {{ statement_uuid | toString }}
        }
      },
      {
        "_component_type": "horizontal_line"
      },
      {
        "_component_type": "text",
        "key": "Vault Name",
        "data": {
          "value": {{ vault_name | toString }}
        }
      },
      {
        "_component_type": "text_with_popup",
        "key": "Holder Group",
        "data": {
          "value": "{{ key_share_holders | len }} Key Share Holders",
          "popup": {
            "title": "Holder Group",
            "sub_title": "{{ key_share_holders | len }} Key Share Holders",
            "components": [
              {% for holder in key_share_holders %}
              {
                "_component_type": "card",
                "_style": {},
                "data": {
                	"title": {{ holder['holder'] | toString }},
                	"icon": "",
                  "contents": [
                    {
                      "content_key": "TSS Node ID",
                      "content_value": {{ holder['tss_node_id'] | toString }}
                    }
                  ]
                }
              }{% if not loop.last %},{% endif %}
              {% endfor %}
            ]
          }
        }
      }
    ]
  }
}